<Controls:MetroWindow x:Class="SoldOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoldOut"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="SoldOut" Height="350" Width="525" WindowState="Maximized"
        Closing="MetroWindow_Closing">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Searches -->
        <ScrollViewer Grid.Row="0" Grid.Column="0">
            <DataGrid  Name="Searches" AutoGenerateColumns="False"
                       SelectionChanged="Searches_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Last Cleansed"
                                        Binding="{Binding LastCleansed}" Width="Auto" />
                    <DataGridTextColumn Header="Last Ran"
                                        Binding="{Binding LastRun}" Width="Auto" />
                    <DataGridTextColumn Header="Description"
                                        Binding="{Binding Description}" Width="5*" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Search Results -->
        <ScrollViewer Grid.Row="1" Grid.Column="0">
            <DataGrid Name="SearchResults" AutoGenerateColumns="False" SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ended"
                                        Binding="{Binding EndTime}" Width="Auto" />
                    <DataGridTextColumn Header="Price"
                                        Binding="{Binding Price, StringFormat=C}" Width="Auto" />
                    <DataGridTextColumn Header="Title"
                                        Binding="{Binding Title}" Width="5*" />
                    <DataGridHyperlinkColumn Header="Listing"
                                             Binding="{Binding Link}" Width="5*">
                        <DataGridHyperlinkColumn.ElementStyle>
                            <Style>
                                <EventSetter Event="Hyperlink.Click" Handler="HandleListingClick"/>
                            </Style>
                        </DataGridHyperlinkColumn.ElementStyle>
                    </DataGridHyperlinkColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        
        <!-- Controls -->
        <Button Grid.Row="2" Grid.Column="0" Click="Button_Click">Cleanse Selected Results</Button>
    </Grid>
</Controls:MetroWindow>
