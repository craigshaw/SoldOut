@model SoldOutWeb.Models.SearchSummary

@{
    ViewBag.Title = "Search Summary";
}

@section scripts{
    <script src="~/Scripts/charting.js" type="text/javascript"></script>
}

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name (<a href="@Model.Link">@Model.Description</a>)</h2>
        <div>Last Ran: @Model.LastRun</div>
        <div>Total Results: @Model.TotalResults</div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <div id="productPriceChartContainer" data-product-id="@Model.SearchID">
            <div id="loader" class="loader">
                <i class="fa fa-spinner fa-spin fa-4x"></i> Loading...
            </div>
            <div id="errorMessage" class="loader" style="display: none">
                <p class="text-danger">Sorry, we couldn't get your search results</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div id="chartContainer" class="chart-container" data-search-id="@Model.SearchID" data-search-title="@Model.Description" data-search-conditionId="2">
            <div id="loader" class="loader">
                <i class="fa fa-spinner fa-spin fa-4x"></i> Loading...
            </div>
            <div id="errorMessage" class="loader" style="display: none">
                <p class="text-danger">Sorry, we couldn't get your search results</p>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div id="usedChartContainer" class="chart-container" data-search-id="@Model.SearchID" data-search-title="@Model.Description" data-search-conditionId="7">
            <div id="loader" class="loader">
                <i class="fa fa-spinner fa-spin fa-4x"></i> Loading...
            </div>
            <div id="errorMessage" class="loader" style="display: none">
                <p class="text-danger">Sorry, we couldn't get your search results</p>
            </div>
        </div>
    </div>
</div>
