@model IEnumerable<SoldOutBusiness.Repository.ProductItemCount>
@{
    ViewBag.Title = "Home";
}

<h2>Home!</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Most Popular Sets This Week</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Number Sold</th>
                </tr>
            </thead>
            <tbody>
                @using (var r = new SoldOutBusiness.Repository.SoldOutRepository())
                {
                    foreach (var product in Model)
                    {
                        var p = r.GetProductByID(product.ProductId);
                        <tr>
                            <td>@Html.ActionLink(p.Name, "Product", new { Id = product.ProductId })</td>
                            <td>@product.ItemCount</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
