@model SoldOutWeb.Models.SearchSummary

@{
    ViewBag.Title = "Search";
}

@section scripts{
    <script src="~/Scripts/charting.js" type="text/javascript"></script>
}

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name (@Model.Description)</h2>
        <div>Last Ran: @Model.LastRun</div>
        <div>Total Results: @Model.TotalResults</div>
    </div>
</div>

<div class="row">
    <div id="chartContainer" class="col-md-6 col-md-offset-3" style="width: 600px; height: 400px;" data-search-id="@Model.SearchID"></div>
</div>