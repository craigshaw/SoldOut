<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nolonga.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <meta name="description" content="Commodity valuation analyser" />

    <script type="text/javascript" language="javascript">
        $(function () {
            $("#searchForm").submit(function () {
                // prevent the default GET form behavior (name-value pairs)
                event.preventDefault();

                // Get the action attribute
                var action = $("#searchForm").attr("action").toLowerCase();

                // Get the search text
                var searchText = $("#searchText").val();

                // Send the user off to the URL w/ template elements replaced
                window.location.href = action + '/' + searchText;
            });
        });
    </script>
</head>

<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NoLonga", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.RouteLink(linkText: "Home",
                                routeName: "Home",
                                routeValues: new { controller = "Home", action = "Home" })
                    </li>
                </ul>

                <form id="searchForm" class="navbar-form navbar-right" role="search" method="get" action="/Search">
                    <div class="form-group">
                        <input id="searchText" type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Search</button>
                </form>
            </div>
        </div>
    </div>

    @*<div class="navbar-static-top  col-lg-offset-10">
        <form id="searchForm" class="form-inline" role="form" method="get" action="/Search">
            <input type="text" class="form-control search-form" id="searchText" placeholder="Search" onkeyup="">
        </form>
    </div>*@

    @*<div class="container">
        <a href="Home"><img src="@Url.Content("~/Content/Images/NoLongaLogo_RedBar.png")" height="100" /></a>
    </div>*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nolonga.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- v @typeof(SoldOutWeb.MvcApplication).Assembly.GetName().Version -->
</body>
</html>
