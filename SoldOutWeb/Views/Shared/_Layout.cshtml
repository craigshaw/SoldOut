<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Nolonga.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <meta name="description" content="Commodity valuation analyser" />
</head>

<body> 

    <div class="navbar-static-top  col-lg-offset-10">    
        <form id="search-form" class="form-inline" role="form" method="post" target="_blank">            
            <input type="text" class="form-control search-form" id="txtSearchInput" placeholder="Search" onkeyup="">            
        </form>    
    </div>

    <div class="container">
        <a href="@Url.Action("Home", "Home")"><img src="@Url.Content("~/Content/Images/NoLongaLogo_RedBar.png")" height="100" /></a>
    </div>

    <div class="container body-content" >
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Nolonga.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- v @typeof(SoldOutWeb.MvcApplication).Assembly.GetName().Version -->
</body>
</html>
