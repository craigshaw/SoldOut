@model SoldOutWeb.Models.SearchSummary

@{
    ViewBag.Title = "Product Summary";
}

@section scripts{
    <script src="~/Scripts/charting.js" type="text/javascript"></script>
    <script>
        function loadProductPageCharts() {
            // New product charts
            loadProductPricesCandlestickChart('newproductPriceChartContainer', '/Api/CandlestickData/')
            loadProductPricesMACD('newproductPriceMACDChartContainer', '/Api/MACData/')
            loadProductPricesForMACDBarChart('newproductPriceMACDBarChartContainer', '/Api/MACData/')
            loadProductPriceLineChart('newproductPriceMonthlySummaryContainer', '/Api/PriceHistory/')

            // Used product charts
            loadProductPricesCandlestickChart('usedproductPriceChartContainer', '/Api/CandlestickData/')
            loadProductPricesMACD('usedproductPriceMACDChartContainer', '/Api/MACData/')
            loadProductPricesForMACDBarChart('usedproductPriceMACDBarChartContainer', '/Api/MACData/')
            loadProductPriceLineChart('usedproductPriceMonthlySummaryContainer', '/Api/PriceHistory/')

            // Misc data charts for the product
            loadProductScatterGraphChart('productScatterGraphChartContainer', '/Api/Scattergraph/')
        }

        $(function () {
            google.charts.setOnLoadCallback(loadProductPageCharts);
        })
    </script>
}

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name (<a href="@Model.Link">@Model.Description</a>)</h2>
        <div>Last Ran: @Model.LastRun</div>
        <div>Total Results: @Model.TotalResults</div>
    </div>
</div>

<h5>General Information about this product</h5>


<ul class="nav nav-tabs nav-justified">
